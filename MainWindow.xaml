<?xml version="1.0" encoding="utf-8"?>
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    Title="Forex Analyzer Pro" 
    Height="900" 
    Width="1200"
    Background="#111827"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="SingleBorderWindow"
    ResizeMode="CanResizeWithGrip"
    MinWidth="800"
    MinHeight="600">
    
    <TabControl Background="Transparent" BorderThickness="0">
        <TabItem Header="ActualitÃ©s">
            <ScrollViewer>
                <StackPanel Margin="15">
                    <ItemsControl Name="newsList" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1F2937" 
                                        Margin="0,0,0,10" 
                                        Padding="10"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Text="{Binding Title}" 
                                                   FontWeight="Bold"
                                                   Foreground="#F3F4F6"/>
                                        
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Description}"
                                                   Margin="0,10"
                                                   TextWrapping="Wrap"
                                                   Foreground="#9CA3AF"/>
                                        
                                        <StackPanel Grid.Row="2" 
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Source}"
                                                       Margin="0,0,10,0"
                                                       Foreground="#9CA3AF"/>
                                            <TextBlock Text="{Binding PubDate}"
                                                       Foreground="#9CA3AF"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        
        <TabItem Header="Analyse">
            <ScrollViewer>
                <StackPanel Margin="15">
                    <Button Name="btnAnalyze"
                            Background="#4F46E5"
                            Foreground="White"
                            Padding="15,10"
                            Margin="0,0,0,20"
                            BorderThickness="0">
                        <TextBlock Text="Analyser les actualitÃ©s"/>
                    </Button>
                    
                    <TextBox Name="txtResults"
                             Background="#1F2937"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="10"
                             MinHeight="400"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        
        <TabItem Header="ParamÃ¨tres">
            <ScrollViewer>
                <StackPanel Margin="15">
                    <!-- Section API Key -->
                    <TextBlock Text="ClÃ© API OpenAI" 
                             Foreground="White" 
                             FontSize="16"
                             FontWeight="SemiBold" 
                             Margin="0,0,0,10"/>
                    <TextBox Name="txtApiKey" 
                            Background="#1F2937"
                            Foreground="White"
                            BorderBrush="#4F46E5"
                            BorderThickness="1"
                            Padding="8"
                            Margin="0,0,0,20"/>
                    
                    <!-- Section Sources RSS -->
                    <TextBlock Text="Sources d'actualitÃ©s" 
                             Foreground="White" 
                             FontSize="16"
                             FontWeight="SemiBold" 
                             Margin="0,0,0,10"/>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="btnAddFeed"
                                Grid.Column="1"
                                Background="#4F46E5"
                                Foreground="White"
                                Padding="15,8"
                                BorderThickness="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âž•" Margin="0,0,8,0"/>
                                <TextBlock Text="Ajouter une source"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <ItemsControl Name="feedsList" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1F2937" 
                                        Margin="0,0,0,10" 
                                        Padding="10"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <CheckBox IsChecked="{Binding Enabled}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBox Text="{Binding Name}"
                                                     Background="Transparent"
                                                     Foreground="White"
                                                     BorderThickness="0"
                                                     FontWeight="SemiBold"/>
                                            <TextBox Text="{Binding Url}"
                                                     Background="Transparent"
                                                     Foreground="#9CA3AF"
                                                     BorderThickness="0"/>
                                        </StackPanel>
                                        
                                        <Button Name="btnTest"
                                                Grid.Column="2"
                                                Margin="10,0"
                                                Background="#374151"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="8,4">
                                            <TextBlock Text="ðŸ”„ Tester"/>
                                        </Button>
                                        
                                        <Button Name="btnDelete"
                                                Grid.Column="3"
                                                Background="#DC2626"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="8,4">
                                            <TextBlock Text="ðŸ—‘ï¸"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Section Prompt SystÃ¨me -->
                    <TextBlock Text="Prompt SystÃ¨me" 
                             Foreground="White" 
                             FontSize="16"
                             FontWeight="SemiBold" 
                             Margin="0,0,0,10"/>
                    <TextBox Name="txtSystemPrompt" 
                            Background="#1F2937"
                            Foreground="White"
                            BorderBrush="#4F46E5"
                            BorderThickness="1"
                            Padding="8"
                            TextWrapping="Wrap" 
                            AcceptsReturn="True" 
                            Height="300" 
                            VerticalScrollBarVisibility="Auto"
                            Margin="0,0,0,20"/>
                    
                    <!-- Bouton Sauvegarder -->
                    <Button Name="btnSaveSettings" 
                            Background="#10B981"
                            Foreground="White"
                            Height="40"
                            Width="200"
                            BorderThickness="0"
                            HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" Margin="0,0,8,0"/>
                            <TextBlock Text="Sauvegarder"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>